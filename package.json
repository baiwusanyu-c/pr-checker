{
  "name": "pr-checker",
  "description": "",
  "private": false,
  "type": "module",
  "version": "1.0.0",
  "packageManager": "^pnpm@7.0.0",
  "keywords": [],
  "license": "MIT",
  "author": "",
  "homepage": "",
  "repository": "",
  "bugs": "",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "init": "pnpm i",
    "lint:fix": "eslint . --fix",
    "dev": "cross-env RUNTIME_ENV=development esno watch play/index.ts",
    "build:split": "pnpm run clean && cross-env RUNTIME_ENV=production pnpm run --filter @pr-checker/build build:split",
    "build:all": "pnpm run clean && cross-env RUNTIME_ENV=production pnpm run --filter @pr-checker/build build:all",
    "prepublishOnly": "pnpm run build:all",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public",
    "publish": "pnpm publish --no-git-checks --access public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "rimraf dist",
    "prepare": "husky install && pnpm run husky:step1 && pnpm run husky:step2",
    "husky:step1": "npx husky add .husky/pre-commit \"npm exec lint-staged --allow-empty\"",
    "husky:step2": "git add .husky/pre-commit && npx husky add .husky/commit-msg \"npx --no -- commitlint --edit $1\" && git add .husky/commit-msg",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "chalk": "4.1.2",
    "fs-extra": "^10.0.1",
    "ora": "^6.1.2"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "fs-extra": "^10.0.1",
    "ora": "^6.1.2"
  },
  "devDependencies": {
    "@baiwusanyu/eslint-config": "^1.0.10",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@pr-checker/build": "*",
    "@pr-checker/entry": "*",
    "@pr-checker/play": "*",
    "@pr-checker/runtime": "*",
    "@pr-checker/utils": "*",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.0.0",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "8.32.0",
    "esno": "^0.16.3",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "jsdom": "^20.0.0",
    "rimraf": "^4.1.0",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "tsup": "^6.5.0",
    "typescript": "4.9.4",
    "@vitest/coverage-c8": "^0.23.4",
    "@vitest/ui": "^0.23.4",
    "vitest": "^0.23.4"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "eslint ./ --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@baiwusanyu"
    ]
  }
}
